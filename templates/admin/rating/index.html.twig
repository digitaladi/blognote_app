{# cette page étend le twig base.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mots clés
{% endblock %}

{% block body %}


{#{% if is_actif == true %} #}

<button class='btn btn-primary mb-4'>
	<a class="dropdown-item" href="{{ path('app_admin_rating_add') }}">Créer une notation</a>
</button>

{% if ratings is not empty  %}
	<table class="table table-hover">
		<thead>
			<tr class="table-warning">
				<th scope="col">voir</th>
				<th scope="col">Note
				</th>
				<th scope="col">L'auteur du note</th>
				<th scope="col">l'astuce de la notation</th>
				<th scope="col">Actions</th>

			</tr>
		</thead>


		<tbody>

			{% for rating in ratings %}
				<tr class="table-dark">
					<th scope="row">

						<a href="{{ path('app_admin_rating_show',{id: rating.id}) }}">{{ ux_icon('mingcute:eye-line', {height:'20px', width:'20px'}) }}</a>

					</th>

					<td>{{ rating.note }}</td>
					<td>{{ rating.user.username }}</td>
					<td>{{ rating.trick.title }}</td>
					<td>


						<a onclick="return confirm('Etes vous sûre de vouloir supprimer cette notation')" href="{{ path('app_admin_rating_delete',{id: rating.id}) }}">{{ ux_icon('mingcute:delete-line',{height:'20px', width:'20px'}) }}</a>


						<a href="{{ path('app_admin_rating_edit',{id: rating.id}) }}">{{ ux_icon('mingcute:edit-line', {height:'20px', width:'20px'}) }}</a>

					</td>
				</tr>
			</ul>
		</tbody>
	</td>
</tr>{% endfor %}</tbody></table>{% else %}<h5><div class="alert alert-dismissible alert-danger"><button type="button" class="btn-close" data-bs-dismiss="alert"></button><strong>Oups!!</strong>Il y'a plus de notations</div></h5>{% endif %}{#	{% endif %} #}{% endblock %}
