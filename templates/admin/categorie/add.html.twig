{% extends 'base.html.twig' %}
{% block title %}Ajouter une catégorie
{% endblock %}

{% block body %}


	<h1 class="mt-2 fw-light">Ajouter une catégorie</h1>


	{{ form_start(formCategorie) }}

	<div class="form-group">
		{{ form_label(formCategorie.name) }}
		{{ form_widget(formCategorie.name) }}

		<div class="form-error">
			{{ form_errors(formCategorie.name) }}
		</div>
	</div>


	<div class="form-group">
		{{ form_label(formCategorie.parent) }}
		{{ form_widget(formCategorie.parent) }}

		<div class="form-error">
			{{ form_errors(formCategorie.parent) }}
		</div>
	</div>

	{{ form_end(formCategorie) }}

	{#
		<div class="mt-4">
			{{ form(formcolor) }}
			</div>
		
	#}
{% endblock %}
