{% extends 'base.html.twig' %}
{% block title %}Modifier une catégorie
{% endblock %}

{% block body %}


	<h1 class="mt-2 fw-light">Modifier une catégorie</h1>


	{{ form_start(categorieFormAdmin) }}

	<div class="form-group">
		{{ form_label(categorieFormAdmin.name) }}
		{{ form_widget(categorieFormAdmin.name) }}

		<div class="form-error">
			{{ form_errors(categorieFormAdmin.name) }}
		</div>
	</div>


	<div class="form-group">
		{{ form_label(categorieFormAdmin.parent) }}
		{{ form_widget(categorieFormAdmin.parent) }}

		<div class="form-error">
			{{ form_errors(categorieFormAdmin.parent) }}
		</div>
	</div>


	{{ form_end(categorieFormAdmin) }}


{% endblock %}
