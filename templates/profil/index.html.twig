{# cette page étend le twig base.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}blognote
{% endblock %}

{% block body %}


	<h1 class="mt-4 fw-light">Mon compte</h1>

	<div class="d-flex">
		<div class="block_index_profil w-25 card p-2 flex-shrink-1">
			<div class="d-flex">
				<div class="">
					<img class="img-fluid profil-index-avatar" src="{{ vich_uploader_asset(app.user, 'imageFile') }}" alt="{{ app.user.imageName }}" width="100px" height:"100px"/></span>

			</div>
			<div class="">

				<div class="ms-1">
					<p>
						{{app.user.username}}</p>
				</div>
				<div class="ms-1">
					<p>{{app.user.email}}</p>
				</div>
				<div class="ms-1">
					<small>
						<i>Inscris depuis
							{{app.user.createdAt|date("m/d/Y")}}</i>
					</small>
				</div>

			</div>
		</div>

	</div>
	<div class="block_index_profil justify-content-center d-flex flex-row card p-4  ms-2 w-75 bd-highlight">
		<div class="w-50 text-center ">
			<p>Nombres d'astuces</p>
			<h3 class="text-color-pink-blognote">{{ app.user.tricks|length }}</h3>
		</div>


		<div class="w-50 text-center ">
			<p>Note générale</p>
			<h3 class="text-color-pink-blognote">4.5</h3>
		</div>


		<div class="w-50 text-center ">
			<p>Dernière connexion</p>
			<h3 class="text-color-pink-blognote">{{ app.user.lastLogin|date("d/m/Y") }}</h3>
		</div>


	</div>

</div>


<div class="d-flex bd-highlight mt-2">
	<div class="block_index_profil card p-2 flex-fill bd-highlight">
		<h4 class="text-color-pink-blognote text-center fw-light">Gestion de mon profil</h4>
		<div class="text-center mt-2">
			<a href="{{ path('app_profile_user_index', {id:app.user.id}) }}">{{ ux_icon('streamline:user-profile-focus', {height:'50px', width:'50px'}) }}</a>
		</div>
	</div>
	<div class="block_index_profil ms-2 card p-2 flex-fill bd-highlight">
		<h4 class="text-color-pink-blognote text-center fw-light">Gestion de mes astuces</h4>
		<div class="text-center mt-2">
			<a href="{{ path('app_profil_trick_index') }}">{{ ux_icon('game-icons:magick-trick', {height:'50px', width:'50px'}) }}</a>
		</div>
	</div>
	<div class="block_index_profil ms-2 card p-2 flex-fill bd-highlight ">
		<h4 class="text-color-pink-blognote text-center fw-light">Voir mes statistiques</h4>
		<div class="text-center mt-2">
			<a href="#">{{ ux_icon('nimbus:stats', {height:'50px', width:'50px'}) }}</a>
		</div>
	</div>
</div>


{#	{% endif %} #}{% endblock %}
